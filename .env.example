# SpendWise Configuration
# Copy this file to .env and fill in your values

# Database URL
# Local Development (SQLite):
# DATABASE_URL=sqlite:///./expense_tracker.db

# Production (Neon PostgreSQL):
# DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Application Settings
DEBUG=False
APP_VERSION=1.5.0

# ============================================================
# Email Configuration
# ============================================================

# Email Client Type: "imap" or "gmail_oauth"
EMAIL_CLIENT_TYPE=gmail_oauth

# Auto-start email monitor on app startup (set to true for production)
EMAIL_MONITOR_AUTO_START=true

# ============================================================
# Option 1: Gmail OAuth 2.0 (Recommended for Gmail)
# ============================================================
# For production/Railway: Set these as base64-encoded strings
# Generate with: cat credentials/google_oauth_credentials.json | base64
# GOOGLE_OAUTH_CREDENTIALS=<base64-encoded-credentials-json>
# GOOGLE_OAUTH_TOKEN=<base64-encoded-token-pickle>

# ============================================================
# Option 2: IMAP (For Yahoo, Outlook, custom email servers)
# ============================================================
# IMAP_SERVER=imap.example.com
# IMAP_PORT=993
# IMAP_USERNAME=your-email@example.com
# IMAP_PASSWORD=your-app-password
# IMAP_USE_SSL=true

# Email poll interval in seconds (default: 60)
EMAIL_POLL_INTERVAL_SECONDS=60
